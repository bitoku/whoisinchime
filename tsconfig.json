{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    // https://www.typescriptlang.org/docs/handbook/release-notes/typescript-2-7.html#support-for-import-d-from-cjs-form-commonjs-modules-with---esmoduleinterop
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "typeRoots": ["node_modules/@types", "types/external"],
    "noUnusedLocals": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/__mocks__/*.ts"],
  "files": ["types/custom/index.d.ts"]
}
